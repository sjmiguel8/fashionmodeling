{
  "rules": {
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        
        "savedItems": {
          "$itemId": {
            ".read": "auth != null",
            ".write": "auth != null && auth.uid == $userId",
            
            // Validate item data
            ".validate": "newData.hasChildren(['id', 'name', 'imageUrl', 'brand', 'price', 'category']) &&
                         newData.child('category').val().matches('^(tops|bottoms|dresses|outerwear)$') &&
                         newData.child('price').isNumber() &&
                         newData.child('savedAt').val().matches('^[0-9]{4}-[0-9]{2}-[0-9]{2}.*')"
          }
        },
        
        "settings": {
          ".read": "auth != null && auth.uid == $userId",
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    }
  }
}
